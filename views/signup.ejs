<%- include('headers/html-header', {}); -%><%- include('nav/navbar', {}); -%>
<div class="container-fluid d-flex align-items-stretch pt-5">
  <div class="row align-items-stretch w-100 pt-3">
    <div class="col-12 py-3">
      <form action="/signup" method="POST">
        <div class="row">
          <div class="col-12">
            <h4 class="mb-3 index-header">Register</h4>
          </div>
          <div class="col-12 mb-3">
            <label for="email">
              <strong>Email</strong>
            </label>
            <input
              type="text"
              class="form-control"
              id="email"
              name="email"
              value=""
            />
            <div class="invalid-feedback">Some invalid feedback</div>
          </div>
          <div class="col-12 mb-3">
            <label for="password">
              <strong>Password</strong>
            </label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              value=""
            />
            <div class="invalid-feedback">Some invalid feedback</div>
          </div>
        </div>
        <hr class="mb-4" />
        <button class="btn btn-primary btn-lg btn-block" type="submit">
          Register
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('footers/html-footer'); -%>
